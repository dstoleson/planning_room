<div class="container">
  	<div class="row">
		<% content_for :title do %>Edit Project<% end %>
		<h3>Edit Project</h3>
		<div class="form">
			<%= form_for @project do |f| %>
		<p><%= f.label :name, "Project Name: " %><%= f.text_field :name, autofocus: true %></p>
		<p><%= f.label :project_type_id, "Project Type: " %><%= f.collection_select(:project_type_id, ProjectType.all, :id, :name) %></p>
		<p><%= f.label :password, "Project Password: " %><%= f.text_field :password %></p>
		<p><%= f.label :bid_date, "Bid Date :" %><%= date_select :project, "bid_date", :start_year => 2015, :end_year => 2025, :order => [:month, :day, :year] %></p>
		<p><%= f.label :dropbox_url, "Project Documents URL: " %><%= f.text_field :dropbox_url %></p>
		<p><%= f.label :manager_name, "Project Manager: " %><%= f.text_field :manager_name %></p>
		<p><%= f.label :project_mail, "Submit Bid Email: " %><%= f.text_field :project_email %></p>
				<%= f.submit 'Update Project'%>
			<% end %>
		</div>
	</div>
	<div class="row">
        <h3>Opened By:</h3>
        <table class="table">
            <tbody>
              <% @project.project_activities.each do |pa| %>
                <tr>
                  <td><%= pa.email %></td>
                  <td><%= pa.company_name %></td>
                  <td><%= pa.created_at %></td>
                </tr>
              <% end %>
            </tbody>
        </table>
	</div>	        
</div>