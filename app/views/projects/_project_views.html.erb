<div class="col-md-7">
    <h3>Project Views</h3>

    <% if @sorted_project_activities.empty? %>
    	<p>No activity.</p>
    <% else %>
	    <ul class="nav nav-tabs" role="tablist">
	    	<li role="presentation" class="active"><a href="#date" aria-controls="date" role="tab" data-toggle="tab">Sort by date</a></li>
	    	<li role="presentation"><a href="#email" aria-controls="email" role="tab" data-toggle="tab">Sort by email</a></li>
	    </ul>

        <div class="tab-content">
        	<div role="tabpanel" class="tab-pane active" id="date">
		        <table class="table">
		            <tbody>
		              <% @sorted_project_activities.each do |pa| %>
		                <tr>
		                  <td><%= pa.email %></td>
		                  <td><%= pa.company_name %></td>
		                  <td><%= pa.created_at.to_date %></td>
		                </tr>
		              <% end %>
		            </tbody>
		        </table>
        	</div>

        	<div role="tabpanel" class="tab-pane" id="email">
		        <table class="table">
		            <tbody>
		              <% @sorted_project_email.each do |pa| %>
		                <tr>
		                  <td><%= pa.email %></td>
		                  <td><%= pa.company_name %></td>
		                  <td><%= pa.created_at.to_date %></td>
		                </tr>
		              <% end %>
		            </tbody>
		        </table>
        	</div>
        </div>
    <% end %>
</div>

<script>
$('#myTabs a').click(function (e) {
  e.preventDefault()
  $(this).tab('show')
})
</script>
