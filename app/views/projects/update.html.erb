<div class="container">
	<% content_for :title do %>Edit Project<% end %>
  	<div class="row">
		<% if @project.errors.any? %>
		  <div id="error_explanation">
		    <ul>
		    <% @project.errors.messages.each do |key, msg| %>
		      <li><%= msg[0] %></li>
		    <% end %>
		    </ul>
		  </div>
		<% end %>
		<h3>Edit Project</h3>
	</div>	
	<div class="form">
		<%= form_for @project do |f| %>
			<p><%= f.label :name, "Project Name: " %><%= f.text_field :name, autofocus: true %></p>
			<p><%= f.label :project_type_id, "Project Type: " %><%= f.collection_select(:project_type_id, ProjectType.all, :id, :name) %></p>
			<p><%= f.label :password, "Project Password: " %><%= f.password_field :password, :value => @project.password %></p>
			<p><%= f.label :password, "Confirm Password: " %><%= f.password_field :password_confirmation, :value => @project.password %></p>
			<p><%= f.label :bid_date, "Bid Date :" %><%= date_select :project, "bid_date", :start_year => 2015, :end_year => 2025, :order => [:month, :day, :year] %></p>
			<p><%= f.label :dropbox_url, "Dropbox URL: " %><%= f.text_field :dropbox_url %></p>
			<p><%= f.label :manager_name, "Project Manager: " %><%= f.text_field :manager_name %></p>
			<p><%= f.label :project_mail, "Submit Bid Email: " %><%= f.text_field :project_email %></p>
			<p><%= f.submit 'Update Project'%></p>
		<% end %>
	</div>
	<div class="row">
        <h3>Project Views</h3>
        <% if @sorted_project_activities.empty? %>
        	<p>No activity.</p>
        <% else %>
	        <table class="table">
	            <tbody>
              <% @sorted_project_activities.each do |pa| %>
	                <tr>
	                  <td><%= pa.email %></td>
	                  <td><%= pa.company_name %></td>
	                  <td><%= pa.created_at %></td>
	                </tr>
	              <% end %>
	            </tbody>
	        </table>
        <% end %>
	</div>	        
</div>