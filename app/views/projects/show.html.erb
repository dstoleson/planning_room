<div class="container">
    <div class="row">
      <div class="col-md-12">
        <% content_for :title do %>Project Details<% end %>
        <h3>Project Details: <%= @project.name %></h3>
        <table class="table table-striped">
          <tr>
            <td class="col-md-3">Project Manager:</td>
            <td class="col-md-"><%= @project.manager_name %></td>
          </tr>
          <% if @project.project_type.name == 'private' %>
            <tr>
              <td>Bid Date:</td>
              <td><%= @project.bid_date.strftime("%m/%d/%Y")%></td>
            </tr>
          <% end %>
          <tr>
            <td>Project Documents:</td>
            <td><%= link_to @project.dropbox_url, @project.dropbox_url, target: "_blank" %></td>
          </tr>
          <tr>
            <td>Submit Bid:</td>
            <td><%= mail_to @project.project_email, nil, :subject => @project.name %></td>
          </tr>
        </table>
      </div>
    </div>
</div>