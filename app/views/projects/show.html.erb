<div class="container">
    <div class="row">
        <% content_for :title do %>Project Details<% end %>
        <h3>Project Details</h3>
        <p>Project: <%= @project.name %></p>
        <p>Project Manager: <%= @project.manager_name %></p>
        <% if @project.project_type.name == 'private' %>
            <p>Bid Date: <%= @project.bid_date.strftime("%m/%d/%Y")%></p>
        <% end %>
        <p>Project Documents: <%= link_to @project.dropbox_url, @project.dropbox_url, target: "_blank" %></p>
        <p>Submit Bid:  <%= mail_to @project.project_email, nil, :subject => @project.name %></p>
    </div>
</div>