<div class="container">
    <% content_for :title do %>Access Project<% end %>
  	<div class="row">
      <div class="col-md-12">
        <h3>Access Project<% if @project %>: <%= @project.name %><% end %></h3>
      </div>
	 </div>	
    <div class="">
		<%= form_for(:session, url: login_path, html: {class: 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <div class="col-md-5"><%= f.text_field :name, :placeholder => "Email", class: 'form-control' %></div>
      </div>
      <div class="form-group">
        <% if @show_company_name %>
        <div class="col-md-5">
          <%= f.text_field :company_name, :placeholder => "Company Name", class: 'form-control' %>
        </div>
        <% end %>
      </div>
      <div class="form-group">
        <% if @show_password %>
          <div class="col-md-5"><%= f.password_field :password, :placeholder => "Password", class: 'form-control' %></div>
        <% end %>
      </div>
		  <div class="form-group">
        <div class="col-md-5"><%= f.submit "Access Project", class: "btn btn-primary" %></div>
      </div>
		<% end %>
	</div>
</div>