<div class="container">
    <% content_for :title do %>Admin<% end %>
  	<div class="row">
		<h3>Admin Login</h3>
	</div>	
    <div class="form">
		<%= form_for(:session, url: admin_path) do |f| %>
			<p><%= f.text_field :name, :placeholder => "Login" %></p>
			<p><%= f.password_field :password, :placeholder => "Password" %></p>
			<p><%= f.submit "Login" %></p>
		<% end %>
	</div>
</div>